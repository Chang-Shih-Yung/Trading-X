{
  "input_specifications": {
    "real_time_data_sources": {
      "binance_websocket": {
        "price_stream": "real_time",
        "volume_stream": "real_time",
        "orderbook_stream": "real_time",
        "funding_rate_api": "periodic"
      },
      "external_apis": {
        "fear_greed_index": "real_time",
        "market_sentiment": "real_time"
      }
    },
    "required_parameters": {
      "dynamic_parameters": [
        "market_regime",
        "trading_session"
      ],
      "orderbook_integration": [
        "spread_calculation",
        "depth_analysis",
        "liquidity_ratio"
      ],
      "signal_thresholds": [
        "strength_minimum",
        "confidence_threshold"
      ]
    }
  },
  "output_specifications": {
    "signal_format": "BasicSignal",
    "market_data_format": "MarketData",
    "output_channels": [
      "phase1b_volatility",
      "phase1c_coordination",
      "phase2_pre_evaluation"
    ],
    "processing_metadata": [
      "orderbook_enhanced",
      "dynamic_parameters",
      "timing_info"
    ]
  },
  "processing_pipeline": {
    "layer_1_data_ingestion": {
      "websocket_handlers": [
        "price",
        "volume",
        "orderbook"
      ],
      "buffer_management": [
        "price_buffer",
        "volume_buffer",
        "orderbook_buffer"
      ],
      "real_time_processing": true
    },
    "layer_2_indicator_calculation": {
      "technical_indicators": [
        "moving_averages",
        "volatility",
        "momentum"
      ],
      "orderbook_metrics": [
        "spread",
        "depth",
        "liquidity_ratio"
      ],
      "dynamic_adaptation": true
    },
    "layer_3_signal_generation": {
      "signal_types": [
        "VOLUME",
        "MOMENTUM",
        "VOLATILITY",
        "ORDERBOOK"
      ],
      "enhancement_flags": [
        "orderbook_enhanced"
      ],
      "priority_assignment": true
    },
    "layer_4_output_formatting": {
      "data_validation": true,
      "metadata_enrichment": true,
      "buffer_management": true
    }
  },
  "data_flow": {
    "input_to_processing": "real_time_stream",
    "processing_to_output": "async_queue",
    "buffer_to_analysis": "time_based_windows",
    "enhancement_integration": "orderbook_metadata"
  },
  "phase1a_basic_signal_generation_dependency": {
    "version": "1.0.0",
    "created_date": "2024-12-19",
    "description": "Phase1A basic signal generation technical configuration and dependencies",
    "module_type": "signal_generation_foundation",
    "strategy_dependency_graph": {
      "core_dependencies": {
        "primary_input_sources": {
          "websocket_realtime_driver": {
            "type": "primary_time_source",
            "data_types": [
              "real_time_price",
              "volume",
              "market_depth"
            ],
            "update_frequency": "100ms",
            "dependency_level": "critical",
            "failure_handling": "system_halt"
          }
        },
        "output_targets": {
          "indicator_dependency_graph": {
            "type": "parallel_processing",
            "data_format": "standardized_basic_signals",
            "transport_protocol": "async_queue",
            "priority": "high"
          },
          "phase1b_volatility_adaptation": {
            "type": "parallel_processing",
            "data_format": "basic_signal_foundation",
            "transport_protocol": "async_queue",
            "priority": "high"
          },
          "phase1c_signal_standardization": {
            "type": "downstream_processing",
            "data_format": "preprocessed_signals",
            "transport_protocol": "direct_pipe",
            "priority": "medium"
          }
        }
      },
      "technical_dependencies": {
        "computation_libraries": {
          "pandas": ">=1.5.0",
          "numpy": ">=1.21.0",
          "asyncio": "built_in",
          "aioredis": ">=2.0.0"
        },
        "data_storage": {
          "redis_cache": {
            "purpose": "real_time_data_caching",
            "ttl": "300s",
            "key_pattern": "phase1a:basic:{symbol}:{timestamp}"
          },
          "memory_buffer": {
            "purpose": "high_speed_processing_buffer",
            "size": "100MB",
            "type": "ring_buffer"
          }
        }
      }
    },
    "dependencies": {
      "upstream_modules": [
        {
          "module": "websocket_realtime_driver",
          "type": "data_source",
          "critical": true,
          "timeout": "1000ms",
          "retry_strategy": "exponential_backoff"
        }
      ],
      "downstream_modules": [
        {
          "module": "indicator_dependency_graph",
          "type": "parallel_consumer",
          "delivery_guarantee": "at_least_once",
          "max_queue_size": 1000
        },
        {
          "module": "phase1b_volatility_adaptation",
          "type": "parallel_consumer",
          "delivery_guarantee": "at_least_once",
          "max_queue_size": 500
        },
        {
          "module": "phase1c_signal_standardization",
          "type": "sequential_consumer",
          "delivery_guarantee": "exactly_once",
          "max_queue_size": 200
        }
      ]
    },
    "computation_flow": {
      "processing_layers": {
        "layer_0_websocket_reception": {
          "input": "websocket_realtime_driver.distributed_phase1_real_time_feeds",
          "processing": "websocket_data_reception_and_buffering",
          "output": "buffered_real_time_market_data",
          "expected_processing_time": "5ms",
          "error_handling": "circuit_breaker_pattern"
        },
        "layer_1_basic_preprocessing": {
          "input": "buffered_real_time_market_data",
          "processing": "basic_data_cleaning_and_validation",
          "output": "cleaned_market_data",
          "expected_processing_time": "8ms",
          "error_handling": "retry_with_fallback"
        },
        "layer_2_signal_pregeneration": {
          "input": "cleaned_market_data",
          "processing": "basic_signal_pattern_detection",
          "output": "basic_signal_candidates",
          "expected_processing_time": "7ms",
          "error_handling": "graceful_degradation"
        },
        "layer_3_output_standardization": {
          "input": "basic_signal_candidates",
          "processing": "signal_format_standardization_and_routing",
          "output": "standardized_basic_signals",
          "expected_processing_time": "5ms",
          "error_handling": "best_effort_delivery"
        }
      },
      "total_expected_processing_time": "25ms",
      "extreme_market_processing_time": "<35ms",
      "concurrency_level": "single_threaded_async",
      "memory_usage": "<50MB"
    },
    "configuration": {
      "signal_generation_params": {
        "basic_mode": {
          "price_change_threshold": {
            "base_value": 0.001,
            "type": "dynamic_parameter",
            "parameter_id": "phase1_price_change_threshold",
            "market_regime_dependent": true,
            "description": "價格變化閾值，根據市場制度動態調整"
          },
          "volume_change_threshold": {
            "base_value": 1.0,
            "type": "dynamic_parameter",
            "parameter_id": "phase1_volume_change_threshold",
            "market_regime_dependent": true,
            "description": "成交量變化閾值，根據市場制度動態調整"
          },
          "signal_strength_range": [
            0.0,
            1.0
          ],
          "confidence_calculation": "basic_statistical_model",
          "confidence_threshold": 0.77
        },
        "extreme_market_mode": {
          "price_change_threshold": {
            "base_value": 0.005,
            "type": "dynamic_parameter",
            "parameter_id": "phase1_price_change_threshold_extreme",
            "market_regime_dependent": true,
            "extreme_mode_multiplier": 5.0,
            "description": "極端市場模式價格變化閾值"
          },
          "volume_change_threshold": {
            "base_value": 3.0,
            "type": "dynamic_parameter",
            "parameter_id": "phase1_volume_change_threshold_extreme",
            "market_regime_dependent": true,
            "extreme_mode_multiplier": 2.0,
            "description": "極端市場模式成交量變化閾值"
          },
          "signal_strength_boost": 1.2,
          "priority_escalation": true,
          "confidence_threshold": 0.77
        }
      },
      "performance_targets": {
        "processing_latency_p99": "<30ms",
        "signal_generation_rate": "10-50 signals/minute",
        "accuracy_baseline": ">60%",
        "system_availability": ">99.5%"
      },
      "dynamic_parameter_integration": {
        "enabled": true,
        "update_frequency": "real_time",
        "supported_parameters": [
          "confidence_threshold",
          "price_change_threshold",
          "volume_change_threshold",
          "signal_strength_multiplier"
        ],
        "market_regime_detection": {
          "enabled": true,
          "detection_interval": "5_minutes",
          "regime_cache_ttl": "300_seconds",
          "regime_types": {
            "BULL_TREND": {
              "description": "上升趨勢市場",
              "detection_criteria": {
                "price_trend_slope": "> 0.02",
                "volume_confirmation": "> 1.2",
                "fear_greed_index": "> 60",
                "moving_average_alignment": "bullish_stack"
              },
              "confidence_threshold": 0.77,
              "parameter_adjustments": {
                "confidence_threshold_multiplier": 0.9,
                "price_change_threshold_multiplier": 0.8,
                "volume_change_threshold_multiplier": 0.9
              }
            },
            "BEAR_TREND": {
              "description": "下降趨勢市場",
              "detection_criteria": {
                "price_trend_slope": "< -0.02",
                "volume_confirmation": "> 1.1",
                "fear_greed_index": "< 40",
                "moving_average_alignment": "bearish_stack"
              },
              "confidence_threshold": 0.77,
              "parameter_adjustments": {
                "confidence_threshold_multiplier": 1.1,
                "price_change_threshold_multiplier": 1.2,
                "volume_change_threshold_multiplier": 1.1
              }
            },
            "SIDEWAYS": {
              "description": "橫盤整理市場",
              "detection_criteria": {
                "price_trend_slope": "[-0.02, 0.02]",
                "volatility": "< 0.05",
                "volume_ratio": "[0.8, 1.2]",
                "range_bound_confirmation": true
              },
              "confidence_threshold": 0.77,
              "parameter_adjustments": {
                "confidence_threshold_multiplier": 1.05,
                "price_change_threshold_multiplier": 1.3,
                "volume_change_threshold_multiplier": 1.2
              }
            },
            "VOLATILE": {
              "description": "高波動市場",
              "detection_criteria": {
                "volatility": "> 0.08",
                "price_gaps": "> 0.02",
                "volume_spikes": "> 2.0",
                "intraday_range": "> 0.05"
              },
              "confidence_threshold": 0.77,
              "parameter_adjustments": {
                "confidence_threshold_multiplier": 0.95,
                "price_change_threshold_multiplier": 0.7,
                "volume_change_threshold_multiplier": 0.8
              }
            }
          }
        },
        "trading_session_detection": {
          "enabled": true,
          "timezone": "UTC",
          "session_types": {
            "US_MARKET": {
              "description": "美股交易時段",
              "time_range": "14:30-21:00",
              "parameter_adjustments": {
                "confidence_threshold_multiplier": 1.0,
                "volume_sensitivity_boost": 1.2
              }
            },
            "ASIA_MARKET": {
              "description": "亞洲市場時段",
              "time_range": "01:00-08:00",
              "parameter_adjustments": {
                "confidence_threshold_multiplier": 1.05,
                "volume_sensitivity_boost": 1.1
              }
            },
            "EUROPE_MARKET": {
              "description": "歐洲市場時段",
              "time_range": "08:00-16:30",
              "parameter_adjustments": {
                "confidence_threshold_multiplier": 1.02,
                "volume_sensitivity_boost": 1.0
              }
            },
            "OVERLAP_HOURS": {
              "description": "市場重疊時段",
              "time_ranges": [
                "14:30-16:30",
                "08:00-09:00"
              ],
              "parameter_adjustments": {
                "confidence_threshold_multiplier": 0.95,
                "volume_sensitivity_boost": 1.3
              }
            },
            "OFF_HOURS": {
              "description": "非交易時段",
              "parameter_adjustments": {
                "confidence_threshold_multiplier": 1.15,
                "volume_sensitivity_boost": 0.8
              }
            }
          }
        },
        "parameter_override_policy": "dynamic_takes_priority",
        "fallback_behavior": "use_base_values",
        "cache_settings": {
          "parameter_cache_ttl": "300_seconds",
          "regime_cache_ttl": "300_seconds",
          "session_cache_ttl": "3600_seconds"
        }
      },
      "monitoring_config": {
        "metrics_collection": [
          "processing_latency",
          "signal_generation_rate",
          "error_rate",
          "queue_depth"
        ],
        "alerting_thresholds": {
          "processing_latency": ">50ms",
          "error_rate": ">5%",
          "queue_depth": ">800"
        }
      }
    },
    "error_handling": {
      "websocket_disconnection": {
        "strategy": "immediate_circuit_break",
        "recovery": "wait_for_reconnection",
        "timeout": "30s"
      },
      "data_quality_anomaly": {
        "strategy": "skip_invalid_data",
        "logging": "error_log_with_sample",
        "threshold": "error_rate < 10%"
      },
      "processing_delay_exceeded": {
        "strategy": "priority_queue_reorder",
        "degradation": "reduce_signal_complexity",
        "alert": "immediate_notification"
      }
    },
    "integration_points": {
      "entry_points": {
        "websocket_data_feed": "async_message_handler",
        "emergency_market_signal": "priority_interrupt_handler"
      },
      "exit_points": {
        "parallel_distribution": [
          "indicators",
          "phase1b"
        ],
        "sequential_pipeline": "phase1c",
        "monitoring_feed": "signal_performance_tracker"
      }
    }
  }
}