{
  "version": "1.0.0",
  "config_name": "智能觸發引擎配置",
  "description": "高勝率信號檢測與智能觸發系統",
  "last_updated": "2025-08-09T00:00:00Z",
  
  "trigger_engine": {
    "class_name": "IntelligentTriggerEngine",
    "execution_mode": "continuous",
    "scan_interval_seconds": 1,
    "parallel_processing": true,
    "max_concurrent_triggers": 10
  },
  
  "signal_classification": {
    "high_priority": {
      "win_rate_threshold": 0.75,
      "minimum_confidence": 0.80,
      "required_confirmations": 3,
      "max_signals_per_hour": 5,
      "action": "immediate_execution"
    },
    "observation": {
      "win_rate_range": [0.40, 0.75],
      "minimum_confidence": 0.60,
      "required_confirmations": 2,
      "max_signals_per_hour": 15,
      "action": "monitor_and_log"
    },
    "low_priority": {
      "win_rate_threshold": 0.40,
      "minimum_confidence": 0.50,
      "required_confirmations": 1,
      "max_signals_per_hour": 50,
      "action": "background_processing"
    }
  },
  
  "technical_indicators": {
    "rsi": {
      "period": 14,
      "oversold": 30,
      "overbought": 70,
      "weight": 0.25,
      "convergence_threshold": 0.80
    },
    "macd": {
      "fast_period": 12,
      "slow_period": 26,
      "signal_period": 9,
      "weight": 0.25,
      "convergence_threshold": 0.75
    },
    "bollinger_bands": {
      "period": 20,
      "std_dev": 2,
      "weight": 0.20,
      "convergence_threshold": 0.70
    },
    "volume_analysis": {
      "sma_period": 20,
      "spike_multiplier": 2.0,
      "weight": 0.15,
      "convergence_threshold": 0.65
    },
    "support_resistance": {
      "lookback_periods": 50,
      "proximity_percent": 0.2,
      "weight": 0.15,
      "convergence_threshold": 0.75
    }
  },
  
  "market_condition_filters": {
    "volatility_filter": {
      "enabled": true,
      "min_volatility": 0.001,
      "max_volatility": 0.05,
      "calculation_period": 24
    },
    "trend_filter": {
      "enabled": true,
      "trend_strength_threshold": 0.6,
      "trend_duration_hours": 4
    },
    "volume_filter": {
      "enabled": true,
      "min_volume_ratio": 0.5,
      "volume_period": 24
    }
  },
  
  "trigger_conditions": {
    "price_momentum": {
      "1min_threshold": 0.005,
      "5min_threshold": 0.02,
      "15min_threshold": 0.05,
      "priority_mapping": {
        "1min": "HIGH",
        "5min": "CRITICAL", 
        "15min": "MEDIUM"
      }
    },
    "indicator_convergence": {
      "minimum_indicators": 3,
      "convergence_score_threshold": 0.75,
      "time_window_minutes": 15,
      "priority": "HIGH"
    },
    "volume_confirmation": {
      "volume_spike_threshold": 2.0,
      "volume_trend_confirmation": true,
      "priority": "MEDIUM"
    },
    "support_resistance_events": {
      "breakout_confirmation": true,
      "false_breakout_filter": true,
      "priority": "HIGH"
    }
  },
  
  "win_rate_calculation": {
    "historical_window_days": 30,
    "minimum_sample_size": 50,
    "confidence_intervals": [0.90, 0.95, 0.99],
    "update_frequency_hours": 6,
    "machine_learning": {
      "enabled": true,
      "model_type": "random_forest",
      "feature_count": 15,
      "retrain_frequency_days": 7
    }
  },
  
  "risk_management": {
    "max_signals_per_symbol_per_hour": 3,
    "cooldown_period_minutes": 15,
    "correlation_filter": {
      "enabled": true,
      "max_correlation": 0.8,
      "correlation_window": 24
    },
    "portfolio_exposure": {
      "max_concurrent_positions": 5,
      "max_portfolio_risk": 0.05
    }
  },
  
  "data_sources": {
    "realtime_prices": "WebSocketRealtimeDriver",
    "historical_data": "binance_historical_api",
    "market_depth": "binance_orderbook",
    "external_signals": "tradingview_indicators"
  },
  
  "output_configuration": {
    "signal_format": "unified_signal_candidate_pool_v3",
    "metadata_inclusion": [
      "trigger_reason",
      "confidence_score", 
      "win_rate_prediction",
      "technical_indicators_state",
      "market_conditions",
      "risk_assessment"
    ],
    "real_time_notifications": {
      "high_priority_immediate": true,
      "observation_summary": true,
      "low_priority_batch": true
    }
  },
  
  "performance_optimization": {
    "caching_strategy": {
      "indicator_cache_ttl": 300,
      "price_cache_ttl": 60,
      "historical_cache_ttl": 3600
    },
    "parallel_processing": {
      "max_workers": 4,
      "task_queue_size": 100,
      "worker_timeout_seconds": 30
    },
    "memory_management": {
      "max_memory_mb": 200,
      "cleanup_interval_minutes": 15,
      "data_compression": true
    }
  },
  
  "monitoring_integration": {
    "unified_dashboard_metrics": {
      "trigger_rate_per_second": "real_time",
      "win_rate_accuracy": "hourly",
      "system_performance": "real_time",
      "error_rates": "real_time"
    },
    "alerting": {
      "trigger_failure_threshold": 0.05,
      "latency_threshold_ms": 1000,
      "memory_threshold_mb": 150,
      "cpu_threshold_percent": 70
    }
  },
  
  "fallback_mechanisms": {
    "websocket_failure": "rest_api_polling",
    "indicator_calculation_failure": "cached_values",
    "ml_model_failure": "rule_based_fallback",
    "high_latency": "reduced_frequency_mode"
  }
}
